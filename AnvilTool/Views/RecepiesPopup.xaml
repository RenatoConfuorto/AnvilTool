<Window x:Class="AnvilTool.Views.RecepiesPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnvilTool.Views"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:Helpers="clr-namespace:AnvilTool.Helpers"
        xmlns:Entities="clr-namespace:AnvilTool.Entities"
        xmlns:StoredData="clr-namespace:AnvilTool.Entities.StoredData" xmlns:usercontrols="clr-namespace:AnvilTool.UserControls"
        Title="RecepiesPopup" Height="450" Width="800">
    <Grid>
        <TreeView ItemsSource="{Binding Servers}" x:Name="treeView">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectedItemChanged">
                    <i:InvokeCommandAction Command="{Binding SelectedItemCommand}"
                                       CommandParameter="{Binding SelectedItem, ElementName=treeView}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
            <TreeView.Resources>
                <HierarchicalDataTemplate DataType="{x:Type StoredData:Server}" ItemsSource="{Binding Materials}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type StoredData:Material}" ItemsSource="{Binding Products}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>
                </HierarchicalDataTemplate>
                <HierarchicalDataTemplate DataType="{x:Type StoredData:Product}" ItemsSource="{Binding FinalSeq}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock>
                            <Run Text="{Binding Name}"/>
                            <Run Text="  -  Target: "/>
                            <Run Text="{Binding Target}"/>
                        </TextBlock>
                    </StackPanel>
                </HierarchicalDataTemplate>
                <DataTemplate DataType="{x:Type Entities:Move}">
                    <usercontrols:MoveButton Move="{Binding .}" IsEnabled="True">
                        <usercontrols:MoveButton.ToolTip>
                            <TextBlock Text="{Binding .}"/>
                        </usercontrols:MoveButton.ToolTip>
                    </usercontrols:MoveButton>
                </DataTemplate>
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>
