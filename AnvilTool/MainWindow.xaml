<Window x:Class="AnvilTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Const="clr-namespace:AnvilTool.Constants" xmlns:usercontrols="clr-namespace:AnvilTool.UserControls"
        Title="Anvil Helper" Height="520" Width="720">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Barra di progresso con target -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Progress" FontWeight="Bold"/>
            <Grid Height="Auto" Margin="0,6">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ProgressBar Minimum="0" Maximum="150"
                             Grid.Row="0"
                             Value="{Binding CurrentPos}" Height="12" VerticalAlignment="Center"/>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <StackPanel Margin="2 2">
                        <TextBlock Text="{Binding StatusLine}" Margin="0,6,0,0"/>
                        <TextBlock Text="Intervallo possibile:" FontWeight="Bold"/>
                        <TextBlock Text="{Binding IntervalDisplay}" />
                    </StackPanel>
                    <StackPanel Margin="10 2">
                        <TextBlock Text="Target Attuale"/>
                        <TextBox   Text="{Binding ActualTarget, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- Pulsanti di controllo -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8">
            <!--<Button Content="Record Final Sequence" Command="{Binding StartRecordFinalCmd}" Margin="0,0,6,0"/>-->
            <Button MinWidth="75" Content="Start Exploration" Command="{Binding ToggleExploreCmd}" Margin="0,0,6,0"/>
            <Button MinWidth="75" Content="Mark Direction Change" Command="{Binding MarkDirectionChangeCmd}" Margin="0,0,6,0"/>
            <Button MinWidth="75" Content="Found Exact" Command="{Binding FoundExactCmd}" Margin="0,0,6,0"/>
            <Button MinWidth="75" Content="Reset" Command="{Binding ResetCmd}" Margin="0,0,6,0"/>
        </StackPanel>

        <!-- Mosse e sequenze -->
        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Pulsanti mosse -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Available Moves" FontWeight="Bold"/>
                <ItemsControl ItemsSource="{x:Static Const:Consts.Moves}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel FlowDirection="LeftToRight"
                                       MaxWidth="320"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!--<Button Content="{Binding Label}"
                                    Command="{Binding DataContext.PressMoveCmd, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding .}"
                                    MinWidth="75"
                                    Margin="2"/>-->
                            <usercontrols:MoveButton Move="{Binding .}"
                                                     MoveClickCommand="{Binding DataContext.PressMoveCmd, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Sequenze -->
            <StackPanel Grid.Column="1">
                <TextBlock Text="Final Sequence" FontWeight="Bold"/>
                <ItemsControl ItemsSource="{Binding FinalSequence}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <usercontrols:MoveButton Move="{Binding .}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Button Content="Compute Shortest Sequence" 
                        Command="{Binding ComputeShortestCmd}" 
                        Margin="0,6,0,0"/>

                <TextBlock Text="Sequenza calcolata:" FontWeight="Bold" Margin="0,8,0,0"/>
                <ItemsControl ItemsSource="{Binding ComputedSequence}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel FlowDirection="LeftToRight"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <usercontrols:MoveButton Move="{Binding .}"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
