<UserControl x:Class="AnvilTool.UserControls.MoveButtonNew"
             x:Name="uCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnvilTool.UserControls"
             xmlns:valueConverters="clr-namespace:AnvilTool.ValueConverters"
             xmlns:properties="clr-namespace:AnvilTool.Properties"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AnvilTool;component/ResourceDictionary/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Button Command="{Binding MoveClickCommand, ElementName=uCtrl}"
            CommandParameter="{Binding Move, ElementName=uCtrl}">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="BorderThickness" Value="3"/>
                    <Setter Property="Margin" Value="1"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="BorderBrush" Value="Black"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
            <Button.ToolTip>
                <TextBlock Text="{Binding .}"/>
            </Button.ToolTip>
            <Grid>
                <Image Width="{ StaticResource btnDim }" 
                       Height="{ StaticResource btnDim }" 
                       Source="{Binding MoveBackground, Converter={StaticResource ImageConverter}}"
                       d:Source="{Binding Source={x:Static properties:Resources.actionButtonRed}, Converter={StaticResource ImageConverter}}"/>
                <Image Width="{ StaticResource btnDim }" 
                       Height="{ StaticResource btnDim }" 
                       Source="{Binding MoveImage, Converter={StaticResource ImageConverter}}"
                       d:Source="{Binding Source={x:Static properties:Resources.hardHit}, Converter={StaticResource ImageConverter}}"/>
            </Grid>
        </Button>
    </Grid>
</UserControl>
