<UserControl x:Class="AnvilTool.UserControls.ProductTreeCtrl"
             x:Name="uCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnvilTool.UserControls"
             xmlns:properties="clr-namespace:AnvilTool.Properties" 
             mc:Ignorable="d"
             d:Background="White">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AnvilTool;component/ResourceDictionary/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0"
               Stretch="Uniform"
               Width="{StaticResource treeIconDim}"
               Source="{Binding Source={x:Static properties:Resources.hammerBg}, Converter={StaticResource ImageConverter}}"/>

        <Grid Grid.Column="1">
            
        <TextBlock Grid.Column="1"
                   Margin="20 0"
                   FontSize="{StaticResource treeLblFontSize}"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Stretch"
                   d:Text="Prodotto">
            <TextBlock.Text>
                <MultiBinding StringFormat="{}{0} - {1}">
                    <Binding Path="Product.Name" ElementName="uCtrl"/>
                    <Binding Path="Product.Target" ElementName="uCtrl"/>
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
        </Grid>

        <ItemsControl ItemsSource="{Binding Product.FinalSeq, ElementName=uCtrl}"
                      Grid.Column="2">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <!--<StackPanel Orientation="Horizontal"/>-->
                    <WrapPanel FlowDirection="LeftToRight"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:ActionMove Move="{Binding .}"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
