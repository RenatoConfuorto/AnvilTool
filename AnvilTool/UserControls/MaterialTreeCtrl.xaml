<UserControl x:Class="AnvilTool.UserControls.MaterialTreeCtrl"
             x:Name="uCtrl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnvilTool.UserControls"
             xmlns:properties="clr-namespace:AnvilTool.Properties" 
             mc:Ignorable="d"
             d:Background="White">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AnvilTool;component/ResourceDictionary/CommonStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="0"
               Margin="4 0"
               Stretch="Uniform"
               Width="{StaticResource treeIconDim}"
               Source="{Binding Source={x:Static properties:Resources.pieceBg}, Converter={StaticResource ImageConverter}}"/>

        <TextBlock Grid.Column="1"
                   FontSize="{StaticResource treeLblFontSize}"
                   Text="{Binding Material.Name, ElementName=uCtrl}"
                   d:Text="Material 1"/>
    </Grid>
</UserControl>
