<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="bgColor">#f5f5f5</Color>
    <Color x:Key="bgColorLight">#fafafa</Color>
    <Color x:Key="accentColor">#f70d68</Color>
    <Color x:Key="accentColorDark">#5e3b49</Color>
    <Color x:Key="textColor">#000000</Color>
    <Color x:Key="borderColor">#080808</Color>

    <SolidColorBrush x:Key="BgColor" Color="{StaticResource bgColor}"/>
    <SolidColorBrush x:Key="BgColorLight" Color="{StaticResource bgColorLight}"/>
    <SolidColorBrush x:Key="AccentColor" Color="{StaticResource accentColor}"/>
    <SolidColorBrush x:Key="AccentColorDark" Color="{StaticResource accentColorDark}"/>
    <SolidColorBrush x:Key="TextColor" Color="{StaticResource textColor}"/>
    <SolidColorBrush x:Key="BorderColor" Color="{StaticResource borderColor}"/>
</ResourceDictionary>